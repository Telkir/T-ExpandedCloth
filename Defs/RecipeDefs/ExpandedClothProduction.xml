<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakeCottonCloth</defName>
		<label>make cotton cloth</label>
		<description>Processes raw cotton fibre into cloth.</description>
		<jobString>Processing cotton.</jobString>
		<workAmount>600</workAmount>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCotton</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<Cloth>6</Cloth>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCotton</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	
